<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_background">

    <!-- Requester Name -->
    <TextView
        android:id="@+id/requesterNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="@drawable/textview_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Requestee Name -->
    <TextView
        android:id="@+id/requesteeNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/textview_background"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/requesterNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Offered Item Image -->
    <ImageView
        android:id="@+id/offeredItemImageView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:background="@drawable/imageview_background"
        app:layout_constraintTop_toBottomOf="@id/requesteeNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Offered Item Name -->
    <TextView
        android:id="@+id/offeredItemNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/textview_background"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/offeredItemImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Requested Item Image -->
    <ImageView
        android:id="@+id/requestedItemImageView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:background="@drawable/imageview_background"
        app:layout_constraintTop_toBottomOf="@id/offeredItemNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Requested Item Name -->
    <TextView
        android:id="@+id/requestedItemNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/textview_background"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/requestedItemImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@android:color/white"
        android:text="Back"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/requestedItemNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
