<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Requester Username -->
        <TextView
            android:id="@+id/requesterTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Requester: John Doe"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Requestee Username -->
        <TextView
            android:id="@+id/requesteeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Requestee: Jane Smith"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/requesterTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Request Status -->
        <TextView
            android:id="@+id/requestStatusTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/requesteeTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Requested Item -->
        <TextView
            android:id="@+id/requestedItemTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Requested Item: Laptop"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/requestStatusTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Offered Item -->
        <TextView
            android:id="@+id/offeredItemTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Offered Item: Smartphone"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/requestedItemTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
