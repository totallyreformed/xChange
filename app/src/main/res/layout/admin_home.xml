<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity.AdminHomeFragment">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/adminScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/adminContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/adminWelcomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Admin!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="16dp" />

            <!-- Items Section -->
            <TextView
                android:id="@+id/adminItemsHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/adminItemsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/adminTotalItemsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Items: 0"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/adminViewItemsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Items"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Users Section -->
            <TextView
                android:id="@+id/adminUsersHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/adminUsersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/adminTotalUsersTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Users: 0"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginEnd="16dp" />
            </LinearLayout>

            <!-- Categories Section -->
            <TextView
                android:id="@+id/adminCategoriesHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/adminCategoriesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/adminTotalCategoriesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Categories: 0"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginEnd="16dp" />
            </LinearLayout>

            <!-- Requests Section -->
            <TextView
                android:id="@+id/adminRequestsHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requests"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/adminRequestsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/adminRequestsCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Requests"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/adminViewRequestsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Requests"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- xChanges Finalized Section -->
            <TextView
                android:id="@+id/adminXChangesHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xChanges Finalized"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/adminXChangesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/adminXChangesCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 xChanges Finalized"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/adminViewXChangesButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View xChanges"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:elevation="2dp" />
            </LinearLayout>
            <Button
                android:id="@+id/adminLogoutButton"
                android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Logout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:backgroundTint="@color/Red"
            android:textColor="@color/white"
            android:padding="15dp"
            android:elevation="4dp"
            />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
