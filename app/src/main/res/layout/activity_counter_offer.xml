<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Request ID -->
    <TextView
        android:id="@+id/requestIdTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="REQUEST"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Requester -->
    <TextView
        android:id="@+id/requesterTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Requester"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requestIdTextView" />

    <!-- Requestee -->
    <TextView
        android:id="@+id/requesteeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Requestee"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requesterTextView" />

    <!-- Requested Item -->
    <TextView
        android:id="@+id/requestedItemTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Requested Item"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requesteeTextView" />

    <!-- Offered Items Spinner -->
    <Spinner
        android:id="@+id/offeredItemSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requestedItemTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>
